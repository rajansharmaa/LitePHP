{
  "minimum-stability": "dev",
  "prefer-stable": true,

  "require" : {
    "php": "^8.1 || ^8.3",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-pdo": "*",
    "ezyang/htmlpurifier": "^4.17",
    "gettext/gettext": "^5.7",
    "guzzlehttp/guzzle": "^7.8",
    "illuminate/cache": "^10.39",
    "illuminate/database": "^10.39",
    "illuminate/events": "^10.39",
    "illuminate/http": "^10.39",
    "monolog/monolog": "^3.5",
    "nesbot/carbon": "^2.72",
    "smarty/smarty": "^4.3",
    "symfony/console": "^6.4",
    "symfony/mailer": "^6.4",
    "vlucas/phpdotenv": "^5.6",
    "xemlock/htmlpurifier-html5": "^0.1.11"
  },

  "autoload": {
    "psr-0": {"": "system/autoload/"},
    "psr-4": {
      "": "system/models/"
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
